<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <!-- Button Row -->
    <LinearLayout
        android:id="@+id/buttonRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp">

        <Button
            style="@style/MyButtonStyle"
            android:id="@+id/booksButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Books" />
        
        <Button
            style="@style/MyButtonStyle"
            android:id="@+id/refreshButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Refresh"
            android:layout_marginStart="8dp" />
        
        <Button
            style="@style/MyButtonStyle"
            android:id="@+id/recentButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Recent"
            android:layout_marginStart="8dp" />
        
        <Button
            android:id="@+id/starButton"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:text="*"
            android:textSize="50sp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:layout_marginStart="8dp" />
        
        <Button
            style="@style/MyButtonStyle"
            android:id="@+id/bookmarksButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Book\nmarks"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- book cover view port -->
    <androidx.cardview.widget.CardView
        android:id="@+id/coverCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/buttonRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/myImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/refresh"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />
    </androidx.cardview.widget.CardView>

    <!-- Current Chapter Name -->
    <TextView
        android:id="@+id/chapterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No chapter selected"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/coverCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="18dp"/>


    <!-- Play button -->
    <Button
        android:id="@+id/playButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Play"
        android:textSize="36sp"
        app:layout_constraintTop_toBottomOf="@id/chapterTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="18dp"/>

    <!-- Previous / Next buttons -->
    <Button
        style="@style/MyButtonStyle"
        android:id="@+id/prevButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Last"
        android:textSize="26sp"
        app:layout_constraintTop_toBottomOf="@id/playButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/nextButton"
        app:layout_constraintWidth_percent="0.35"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="2dp"/>
    
    <Button
        style="@style/MyButtonStyle"
        android:id="@+id/nextButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Next"
        android:textSize="26sp"
        app:layout_constraintTop_toBottomOf="@id/playButton"
        app:layout_constraintStart_toEndOf="@id/prevButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.35"
        android:layout_marginTop="4dp"
        android:layout_marginStart="2dp"/>
    
    <!-- Seek backward / forward buttons -->
    <!-- -1 minute -->
    <Button
        style="@style/MyButtonStyle"
        android:id="@+id/seekBackButton1min"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="-1m"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/prevButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/seekBackButton5sec"
        app:layout_constraintWidth_percent="0.18"
        android:layout_marginTop="4dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="0dp"/>

    <!-- -5 seconds -->
    <Button
        style="@style/MyButtonStyle"
        android:id="@+id/seekBackButton5sec"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="-5s"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/prevButton"
        app:layout_constraintStart_toEndOf="@id/seekBackButton1min"
        app:layout_constraintEnd_toStartOf="@id/seekForwardButton5sec"
        app:layout_constraintWidth_percent="0.18"
        android:layout_marginTop="4dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="0dp"/>

    <!-- +5 seconds -->
    <Button
        style="@style/MyButtonStyle"
        android:id="@+id/seekForwardButton5sec"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="+5s"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/prevButton"
        app:layout_constraintStart_toEndOf="@id/seekBackButton5sec"
        app:layout_constraintEnd_toStartOf="@id/seekForwardButton1min"
        app:layout_constraintWidth_percent="0.18"
        android:layout_marginTop="4dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="0dp"/>

    <!-- +1 minute -->
    <Button
        style="@style/MyButtonStyle"
        android:id="@+id/seekForwardButton1min"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:text="+1m"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/prevButton"
        app:layout_constraintStart_toEndOf="@id/seekForwardButton5sec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.18"
        android:layout_marginTop="4dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="20dp"/>

    <!-- Progress Bar Container -->
    <FrameLayout
        android:id="@+id/progressBarContainer"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/seekBackButton1min"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="8dp"
        android:background="@drawable/progress_bar_background">

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/chapterProgressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/progress_bar_drawable"
            android:layout_margin="2dp"/>

        <!-- Time Display -->
        <TextView
            android:id="@+id/timeDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0:00 / 0:00"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:shadowColor="@android:color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

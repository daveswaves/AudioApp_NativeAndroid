<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <!-- Button Row -->
    <LinearLayout
        android:id="@+id/buttonRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp">

        <Button
            style="@style/MyButtonStyle"
            android:id="@+id/booksButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Books" />
        
        <Button
            style="@style/MyButtonStyle"
            android:id="@+id/refreshButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Refresh"
            android:layout_marginStart="8dp" />
        
        <Button
            style="@style/MyButtonStyle"
            android:id="@+id/recentButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Recent"
            android:layout_marginStart="8dp" />
        
        <Button
            android:id="@+id/starButton"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:text="*"
            android:textSize="50sp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:layout_marginStart="8dp" />
        
        <Button
            style="@style/MyButtonStyle"
            android:id="@+id/bookmarksButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Book\nmarks"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- book cover view port -->
    <androidx.cardview.widget.CardView
        android:id="@+id/coverCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/buttonRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/myImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/refresh"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true" />
    </androidx.cardview.widget.CardView>

    <!-- Play button -->
    <Button
        android:id="@+id/playButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Play"
        android:textSize="36sp"
        app:layout_constraintTop_toBottomOf="@id/coverCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="18dp"/>

    <!-- Previous / Next buttons -->
    <Button
        style="@style/MyButtonStyle"
        android:id="@+id/prevButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Last"
        android:textSize="26sp"
        app:layout_constraintTop_toBottomOf="@id/playButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/nextButton"
        app:layout_constraintWidth_percent="0.35"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="2dp"/>
    
    <Button
        style="@style/MyButtonStyle"
        android:id="@+id/nextButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Next"
        android:textSize="26sp"
        app:layout_constraintTop_toBottomOf="@id/playButton"
        app:layout_constraintStart_toEndOf="@id/prevButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.35"
        android:layout_marginTop="4dp"
        android:layout_marginStart="2dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
